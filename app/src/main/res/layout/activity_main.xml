<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="2"
    android:orientation="vertical" >

    <TableLayout android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/Gray">

    </TableLayout>

    <FrameLayout android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/Darker_Gray">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:id="@+id/invisibleBox"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:layout_width="800dp"
                android:layout_height="75dp"
                android:id="@+id/CDinput"
                android:layout_gravity="center_horizontal"
                android:background="@color/Black" />

            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:columnCount="74">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:id="@+id/textView"
                    android:layout_row="0"
                    android:layout_column="7" />

                <ImageButton
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:id="@+id/play_button"
                    android:layout_row="7"
                    android:layout_column="16"
                    android:src="@mipmap/play" />

                <ImageButton
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:id="@+id/stop_button"
                    android:layout_row="7"
                    android:layout_column="53"
                    android:src="@mipmap/stop" />

                <ImageButton
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:id="@+id/eject_button"
                    android:layout_row="7"
                    android:layout_column="71"
                    android:layout_gravity="left"
                    android:src="@mipmap/eject" />

                <ImageButton
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:id="@+id/next_button"
                    android:layout_row="7"
                    android:layout_column="72"
                    android:layout_gravity="left"
                    android:src="@mipmap/next" />

                <ImageButton
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:id="@+id/repeat_button"
                    android:layout_row="7"
                    android:layout_column="73"
                    android:layout_gravity="left"
                    android:src="@mipmap/repeat" />
            </GridLayout>

        </LinearLayout>
    </FrameLayout>


</LinearLayout>